{
    "name": "Footer Widget: Danh sách bài viết",
    "inputs": {
        "title": {
            "type": "text",
            "label": "Tiêu đề (Tùy chọn)"
        },
        "dynamic_id": {
            "type": "crazyselect",
            "label": "Mục (tùy chọn)",
            "template": "crazyselect",
            "call": "get_dynamic_options",
            "params": [[], "Chọn một"],
            "@change": "Crazy.posts.changeDynamicID",
            "required": "true"
        },
        "category_id": {
            "type": "crazyselect",
            "label": "Danh mục (tùy chọn)",
            "template": "crazyselect",
            "call": "get_post_category_options",
            "params": [
                {
                    "dynamic_id": "#dynamic_id"
                },
                true
            ],
            "@label-type": "value"
        },
        "group_by_category": {
            "type": "switch",
            "label": "Nhóm theo danh mục",
            "value_type": "boolean"

        },
        "sorttype": {
            "type": "select",
            "label": "kiểu sắp xếp",
            "call": "get_post_sortby_options"
        },
        "post_number": {
            "type": "number",
            "label": "Số tin bài",
            "min": 1,
            "step": 1,
            "default": 3
        },
        "col_xs": {
            "type": "crazyselect",
            "label": "col (col-xs)",
            "data": {
                "": "Không",
                "1": "1 / 12",
                "2": "2 / 12",
                "3": "3 / 12",
                "4": "4 / 12",
                "5": "5 / 12",
                "6": "6 / 12",
                "7": "7 / 12",
                "8": "8 / 12",
                "9": "9 / 12",
                "10": "10 / 12",
                "11": "11 / 12",
                "12": "12 / 12"
            },
            "default": 12
        },
        "col_sm": {
            "type": "crazyselect",
            "label": "col-sm",
            "data": {
                "": "Không",
                "1": "1 / 12",
                "2": "2 / 12",
                "3": "3 / 12",
                "4": "4 / 12",
                "5": "5 / 12",
                "6": "6 / 12",
                "7": "7 / 12",
                "8": "8 / 12",
                "9": "9 / 12",
                "10": "10 / 12",
                "11": "11 / 12",
                "12": "12 / 12"
            },
            "default": 12
        },
        "col_md": {
            "type": "crazyselect",
            "label": "col-md",
            "data": {
                "": "Không",
                "1": "1 / 12",
                "2": "2 / 12",
                "3": "3 / 12",
                "4": "4 / 12",
                "5": "5 / 12",
                "6": "6 / 12",
                "7": "7 / 12",
                "8": "8 / 12",
                "9": "9 / 12",
                "10": "10 / 12",
                "11": "11 / 12",
                "12": "12 / 12"
            },
            "default": 6
