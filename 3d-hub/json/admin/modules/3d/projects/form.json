{
    "inputs": {
        "thumbnail_url": {
            "type": "3dpreview",
            "label": "Preview",
            "placeholder": "nhập tên Project"
        },
        "name": {
            "type": "text",
            "label": "Tên Project / Nhãn",
            "placeholder": "nhập tên Project"
        },
        
        "category_id": {
            "type": "crazyselect",
            "label": "Danh mục",
            "call": "get_3d_category_options",
            "params": []
        },
        "description": {
            "type": "textarea",
            "label": "Mô tả",
            "placeholder": "nhập viết gì đó"
        },
        "status": {
            "type": "radio",
            "label": "Trạng thái",
            "call": "get_3d_status_options",
            "params": []
        }
    },
    "config": {
        "name": "Thông tin Model",
        "layout_type": "column",
        "form_groups": {
            "baseinfo": {
                "title": "Preview",
                "class": "col-12 col-md-6 col-lg-4 col-xl-4 hide-title",
                "inputs": [
                    "thumbnail_url"
                    
                ]
            },
            "detail": {
                "title": "Chi tiết",
                "class": "col-12 col-md-6 col-lg-8 col-xl-8 hide-title",
                "inputs": [
                    "name",
                    "category_id",
                    "description",
                    "status"
                ]
            }
        }
    }
}