{
    "name": "Khuyến mãi",
    "package": "promos",
    "use_trash": true,
    "titles": {
        "default": "Danh sách Khuyến mãi",
        "trash": "Danh sách Khuyến mãi đã xóa"
    },
    "buttons": {},
    "data": {
        "types":["Trừ vào giá ản phẩm", "Giảm theo phầm trăm", "Miễn phí giao hàng"],
        "units":["VNĐ", "%", ""],
        "refs":{
            "order": "Đơn hàng",
            "product": "Danh sách sản phẩm"
        }
    },
    "filter":{
        "search_columns": {
            "name":"Tên ch.trình Khuyến mãi"
        },
        "sort_columns": {
            "name":"Tên c.trình Khuyến mãi",
            "started_at":"Thời gian bắt đầu",
            "finished_at":"Thời gian kết thúc"
        }
    },
    "table": {
        "columns": [
            {
                "type": "template",
                "title": "Chương trìnhn khuyến mãi",
                "class": "min-160 max-250",
                "template": "<a href=\"{url}\">{name}</a>",
                "data": {
                    "url": {
                        "call":"route",
                        "params":[".update",{
                            "id": ":id"
                        }]
                    },
                    "name": ":name"
                }
            },
            {
                "type": "data",
                "title": "Áp dụng",
                "class": "",
                "data_key": "refs",
                "value_key": ":scope"
            },
            {
                "type": "data",
                "title": "Hình thức",
                "class": "",
                "data_key": "types",
                "value_key": ":type"
            },
            {
                "type": "template",
                "title": "Giá trị",
                "class": "",
                "template": "<span class=\"down-price\">{value}</span>",
                "data": {
                    "value":{
                        "call": "number_format",
                        "params": [":down_price",2,",","."]
                    }
                }
            },
            {
                "type": "html",
                "title": "Sản phẩm",
                "class": "",
                "html":{
                    "tag_name": "a",
                    "content": "Danh sách",
                    "attrs": {
                        "href":"#",
                        "class": "view-product-list",
                        "data-id": ":id"
                    }
                }
            }
        ]
    },
    "resources":{
        "js_data":{},
        "js":[],
        "css":[]
    }
}